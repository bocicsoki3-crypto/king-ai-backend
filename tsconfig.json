{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": [
    "*.js",
    "*.ts",
    "src/**/*.ts",
    "providers/**/*.js",
    "providers/**/*.ts",
    "providers/common/*.js",
    "providers/common/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "script.ts" // KIVÉTEL: A tsc ne fordítsa le a kliens szkriptet
  ]
}